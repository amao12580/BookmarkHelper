<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.kisscat.www.bookmarkhelper.activity.MainActivity">

    <fragment
        android:id="@+id/id_fragment_title"
        android:name="pro.kisscat.www.bookmarkhelper.fragment.TitleFragment"
        android:layout_width="fill_parent"
        android:layout_height="45dp" />

    <fragment
        android:id="@+id/id_fragment_content"
        android:name="pro.kisscat.www.bookmarkhelper.fragment.ContentFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/id_fragment_title" />

</RelativeLayout>