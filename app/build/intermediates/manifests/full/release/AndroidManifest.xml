<?xml version="1.0" encoding="utf-8"?>
<!-- manifest文件详解：http://www.cnblogs.com/pilang/archive/2011/04/20/2022932.html -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pro.kisscat.www.bookmarkhelper"
    android:versionCode="84"
    android:versionName="0.0.6" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowIsTranslucent="true"
        android:windowNoTitle="true" >
        <activity
            android:name="pro.kisscat.www.bookmarkhelper.activity.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pro.kisscat.www.bookmarkhelper.activity.Html5Activity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>